{% extends 'base.html.twig' %}
{% block body %}
    <h1>Nowa faktura</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('faktury_index') }}">Back to the list</a>
        </li>
    </ul>

{% endblock %}
{% block javascripts %}

    $('select').on('change', function() {

    var zaplacone = this.value;

        if (zaplacone == 0) {

            $.ajax({
                type:"POST",
                url:"{{ path( 'faktury_new' ) }},
                data: {valueKey:zaplacone},
            });
        }
    });

{% endblock %}
